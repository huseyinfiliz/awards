{
  "name": "huseyinfiliz/awards",
  "description": "Community awards and voting extension for Flarum",
  "keywords": [
    "flarum",
    "awards",
    "voting",
    "polls",
    "community"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/huseyinfiliz/awards/issues",
    "source": "https://github.com/huseyinfiliz/awards",
    "forum": "https://discuss.flarum.org/d/your-discussion-id"
  },
  "homepage": "https://github.com/huseyinfiliz/awards",
  "funding": [
    {
      "type": "website",
      "url": "https://github.com/huseyinfiliz"
    }
  ],
  "require": {
    "flarum/core": "^1.8.0"
  },
  "authors": [
    {
      "name": "HÃ¼seyin Filiz",
      "email": "mysuperuser01@gmail.com",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "HuseyinFiliz\\Awards\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "HuseyinFiliz\\Awards\\Tests\\": "tests/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Awards",
      "category": "feature",
      "icon": {
        "name": "fas fa-trophy",
        "backgroundColor": "#3498db",
        "color": "#fff"
      }
    },
    "flarum-cli": {
      "modules": {
        "admin": true,
        "forum": true,
        "js": true,
        "jsCommon": true,
        "css": true,
        "gitConf": true,
        "githubActions": true,
        "prettier": true,
        "typescript": true, 
        "bundlewatch": false,
        "backendTesting": true,
        "editorConfig": true,
        "styleci": true
      }
    }
  },
  "scripts": {
    "analyse:phpstan": "phpstan analyse",
    "analyse:phpstan:clear": "phpstan clear-result-cache",
    "test": [
      "@test:unit",
      "@test:integration"
    ],
    "test:unit": "phpunit -c phpunit.xml --testsuite Unit",
    "test:integration": "phpunit -c phpunit.xml --testsuite Integration",
    "test:coverage": "phpunit -c phpunit.xml --coverage-html coverage",
    "test:setup": "@php tests/integration/setup.php",
    "cs": "php-cs-fixer fix --dry-run --diff",
    "cs:fix": "php-cs-fixer fix"
  },
  "scripts-descriptions": {
    "analyse:phpstan": "Run static analysis with PHPStan",
    "test": "Run all tests",
    "test:unit": "Run unit tests only",
    "test:integration": "Run integration tests only",
    "test:setup": "Set up integration test environment",
    "cs": "Check code style",
    "cs:fix": "Fix code style issues"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "flarum/phpstan": "^1.0",
    "flarum/testing": "^1.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  }
}